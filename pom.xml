<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.schlichtherle</groupId>
        <artifactId>asl20-oss-parent</artifactId>
        <version>4</version>
    </parent>

    <groupId>de.schlichtherle.truezip</groupId>
    <artifactId>truezip-root</artifactId>
    <version>7.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>TrueZIP Root POM</name>
    <description>
        TrueZIP is an extensible Java based Virtual File System (VFS) to enable
        multi-threaded read/write access to archive files (ZIP, TAR etc.) as if
        they were directories.

        Archive files may be arbitrarily nested and the nesting level is only
        limited by heap and file system size.
    </description>
    <url>http://kenai.com/projects/truezip</url>
    <inceptionYear>2005</inceptionYear>
    <issueManagement>
        <system>JIRA</system>
        <url>http://kenai.com/jira/browse/TRUEZIP</url>
    </issueManagement>
    <scm>
        <connection>scm:hg:https://hg.kenai.com/hg/truezip~v7</connection>
        <developerConnection>scm:hg:ssh://hg.kenai.com/truezip~v7</developerConnection>
        <url>http://kenai.com/projects/truezip/sources/v7/show</url>
    </scm>

    <modules>
        <module>core</module>
        <module>driver</module>
        <module>samples</module>
        <module>tck</module>
    </modules>

    <dependencies>
        <dependency>
            <!-- TODO: Create a truezip-driver-tzp module -->
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk15</artifactId>
            <version>1.45</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>findbugs</groupId>
            <artifactId>annotations</artifactId>
            <version>1.0.0</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.netbeans</groupId>
            <artifactId>jemmy</artifactId>
            <version>2.2.7.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <groups>
                        <group>
                            <title>Access Tier</title>
                            <packages>de.schlichtherle.truezip.io.file:de.schlichtherle.truezip.io.sample:de.schlichtherle.truezip.awt:de.schlichtherle.truezip.io.swing*:de.schlichtherle.truezip.swing*</packages>
                        </group>
                        <group>
                            <title>Engine Tier</title>
                            <packages>de.schlichtherle.truezip.io.archive*:de.schlichtherle.truezip.io.filesystem*</packages>
                        </group>
                        <group>
                            <title>Data Tier</title>
                            <packages>de.schlichtherle.truezip.io.zip:de.schlichtherle.truezip.crypto.io.raes</packages>
                        </group>
                    </groups>
                    <links>
                        <link>http://www.bouncycastle.org/docs/docs1.5/</link>
                    </links>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-site-plugin</artifactId>
                <configuration>
                    <reportPlugins>
                        <plugin>
                            <artifactId>maven-project-info-reports-plugin</artifactId>
                            <version>2.2</version>
                        </plugin>
                        <plugin>
                            <artifactId>maven-javadoc-plugin</artifactId>
                            <version>2.7</version>
                            <configuration>
                                <author>true</author>
                                <encoding>${project.build.sourceEncoding}</encoding>
                                <header>&lt;b&gt;${project.name} ${project.version}&lt;/b&gt;</header>
                                <quiet>true</quiet>
                                <splitindex>${javadoc.splitindex}</splitindex>
                                <version>true</version>
                                <groups>
                                    <group>
                                        <title>Access Tier</title>
                                        <packages>de.schlichtherle.truezip.io.file:de.schlichtherle.truezip.io.sample:de.schlichtherle.truezip.awt:de.schlichtherle.truezip.io.swing*:de.schlichtherle.truezip.swing*</packages>
                                    </group>
                                    <group>
                                        <title>Engine Tier</title>
                                        <packages>de.schlichtherle.truezip.io.archive*:de.schlichtherle.truezip.io.filesystem*</packages>
                                    </group>
                                    <group>
                                        <title>Data Tier</title>
                                        <packages>de.schlichtherle.truezip.io.zip:de.schlichtherle.truezip.crypto.io.raes</packages>
                                    </group>
                                </groups>
                                <links>
                                    <link>http://www.bouncycastle.org/docs/docs1.5/</link>
                                </links>
                            </configuration>
                        </plugin>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>findbugs-maven-plugin</artifactId>
                            <version>2.3.1</version>
                        </plugin>
                    </reportPlugins>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <compiler.source>1.6</compiler.source>
        <compiler.target>1.6</compiler.target>
    </properties>
</project>
