<actions>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
        </goals>
        <properties>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.workingdir>C:\Users\christian\Documents\temp</exec.workingdir>
            <exec.args>-ea -classpath %classpath de.schlichtherle.truezip.sample.file.app.Nzip llr test.zip</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
        </goals>
        <properties>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.workingdir>C:\Users\christian\Documents\temp</exec.workingdir>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -ea -classpath %classpath de.schlichtherle.truezip.sample.file.app.Nzip llr test.zip</exec.args>
            <jpda.listen>true</jpda.listen>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
        </goals>
        <properties>
            <exec.args>${profiler.args} -ea -classpath %classpath de.schlichtherle.truezip.sample.file.app.Nzip llr test.zip</exec.args>
            <exec.workingdir>C:\Users\christian\Documents\temp</exec.workingdir>
            <profiler.action>profile</profiler.action>
            <exec.executable>${profiler.java}</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-site:run</actionName>
        <displayName>site:run</displayName>
        <goals>
            <goal>site:run</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-site</actionName>
        <displayName>site</displayName>
        <goals>
            <goal>site</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-help:effective-pom</actionName>
        <displayName>help:effective-pom</displayName>
        <goals>
            <goal>help:effective-pom</goal>
        </goals>
    </action>
</actions>
